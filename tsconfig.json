{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2017"
        ],
        "resolveJsonModule": true,
        "watch": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "built"
    ]
}